<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset 
	    name="details" 
	    addfieldpath="/administrator/components/com_jux_real_estate/models/fields" />
    <field 
	    name="id" 
	    type="text" 
	    default="0" 
	    label="JGLOBAL_FIELD_ID_LABEL"
	    readonly="true"
	    class="readonly"
	    description="JGLOBAL_FIELD_ID_DESC" />

    <field
	    name="name"
	    type="text" 
	    class="inputbox"
	    size="40" 
	    label="COM_JUX_REAL_ESTATE_COUNTRY_NAME"
	    description="COM_JUX_REAL_ESTATE_COUNTRY_NAME"
	    required="true" />
    
    <field
	    name="code"
	    type="text" 
	    class="inputbox"
	    size="40" 
	    label="COM_JUX_REAL_ESTATE_COUNTRY_CODE"
	    description="COM_JUX_REAL_ESTATE_COUNTRY_CODE"
	    required="true" />
    
    <field 
	    name="published" 
	    type="list" 
	    label="JSTATUS"
	    description="JFIELD_PUBLISHED_DESC" 
	    class="inputbox"
	    filter="intval" 
	    size="1" 
	    default="1"
    >
	    <option value="1"> JPUBLISHED </option>
	    <option value="0"> JUNPUBLISHED </option>
    </field>
</form>