<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0.0" method="upgrade">
    <name>JUX Real Estate Categories</name>
    <author>JoomlaUX</author>
    <creationDate>24 July 2015</creationDate>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <copyright>Copyright (C) 2012 - 2015 by JoomlaUX Solutions. All rights reserved.</copyright>
    <authorEmail>admin@joomlaux.com</authorEmail>
    <authorUrl>http://www.joomlaux.com</authorUrl>
    <version>3.2.4</version>
    <description>MOD_JUX_REAL_ESTATE_CATEGORIES_DESC</description>

    <files>
        <filename module="mod_jux_realestate_categories">mod_jux_realestate_categories.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>mod_jux_realestate_categories.xml</filename>
        <folder>tmpl</folder>
        <folder>assets</folder>
    </files>
	<languages>
        <language tag="en-GB">language/en-GB.mod_jux_realestate_categories.ini</language>
        <language tag="en-GB">language/en-GB.mod_jux_realestate_categories.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="orderby_sec" 
                    type="list" 
                    default="ordering" 
                    label="MOD_JUX_REAL_ESTATE_CATEGORIES_ORDER_BY"
                    description="MOD_JUX_REAL_ESTATE_CATEGORIES_ORDER_BY_DESC">
                    <option value="alpha">Title Alphabetical</option>
                    <option value="ralpha">Title Reverse-Alphabetical</option>
                </field>
                <field 
                    class="btn-group" 
                    name="count_realties" 
                    type="radio" 
                    default="1" 
                    label="MOD_JUX_REAL_ESTATE_CATEGORIES_COUNT_REALTIES"
                    description="MOD_JUX_REAL_ESTATE_CATEGORIES_COUNT_REALTIES_DESC">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>
